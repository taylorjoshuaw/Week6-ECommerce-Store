@model BasketDetailsViewModel

<div class="card">
    @if (Model.Items != null && Model.Items.Count > 0)
    {
        <div class="card-header">
            <i class="material-icons">shopping_cart</i>
            <strong>@Model.Items.Count</strong>
            <strong class="d-none d-xl-inline">Products in Shopping Basket</strong>
        </div>
        <div class="card-body py-2 px-3">
            <table class="table table-hover mt-2">
                <thead class="thead-light">
                    <tr>
                        <th>Qty</th>
                        <th>Product</th>
                        <th>Unit</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Name</td>
                            <td>$@item.Product.Price</td>
                            <td>$@(item.Quantity * item.Product.Price)</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-info">
                    <tr>
                        <td>@Model.TotalQuantity</td>
                        <td>Grand Total</td>
                        <td></td>
                        <td>$@Model.TotalPrice</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="card-header">
            <i class="material-icons">shopping_cart</i>
            <strong>0</strong>
            <strong class="d-none d-xl-inline">Items in Shopping Basket</strong>
        </div>
    }
</div>
    </div>
