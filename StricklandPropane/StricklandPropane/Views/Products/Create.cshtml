@model Product

@{
    ViewBag.Title = "Create";
}

<h2>Create New Product</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="15" cols="80"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="ImageHref"></label>
        <input asp-for="ImageHref" />
        <span asp-validation-for="ImageHref"></span>
    </div>
    <div>
        <label asp-for="PolicyRequirement"></label>
        <select asp-for="PolicyRequirement" asp-items="@(new SelectList(ApplicationPolicies.ToEnumerable()))">
            <option value="">- None -</option>
        </select>
        <span asp-validation-for="PolicyRequirement"></span>
    </div>

    <a asp-action="Index">Cancel</a>
    <button type="submit">Submit</button>
</form>
